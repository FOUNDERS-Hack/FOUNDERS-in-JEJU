<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:padding="40dp"
    tools:context=".RegCusActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="45sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="left"
        android:layout_marginBottom="30dp"
        />

    <ImageView
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입이 완료되었습니다."
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="25sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:gravity="left"
        />

<!--    <EditText-->
<!--        android:id="@+id/username"-->
<!--        android:gravity="left"-->
<!--        android:text="0x65dFefEAADE98ger23"-->
<!--        android:fontFamily="@font/poppinsregular"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="판매자인 경우, 판매 상품의 품질 인증을 위해 &#10;DID 발급이 필요합니다."
        android:fontFamily="@font/applesdgothicneol"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:gravity="left"
        />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/done"
            android:text="DID 요청"
            android:fontFamily="@font/applesdgothicneoeb"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="약 5초에서 10초 소요됩니다"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="10dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:gravity="center"/>


</LinearLayout>