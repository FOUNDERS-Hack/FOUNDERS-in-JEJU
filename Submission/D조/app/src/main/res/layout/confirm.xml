<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="40dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 확정"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="45sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="left"
        android:layout_marginBottom="15dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_marginLeft="85dp"
            android:background="@drawable/tree"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ball"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="185dp"
            android:rotation="45"
            android:background="@drawable/ball2"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="145dp"
            android:rotation="335"
            android:background="@drawable/ball3"/>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="구매 확정 완료되었습니다"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="25dp"
        android:textColor="#000000"

        android:gravity="left"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="방울 9개 (900원) 적립되었습니다"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textSize="15dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:gravity="left"
        />

    <Button
        android:id="@+id/btnreview"
        android:text="리뷰 작성 (방울 적립)"
       android:fontFamily="@font/applesdgothicneoeb"
        android:textColor="#000000"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#ffffff"/>
    <Button
        android:id="@+id/btnhome"
        android:text="메인 화면으로 이동"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textColor="#000000"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#ffffff"/>

</LinearLayout>
