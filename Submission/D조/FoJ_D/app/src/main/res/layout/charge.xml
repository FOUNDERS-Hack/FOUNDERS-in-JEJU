<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient"
            android:padding="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="충전"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="45sp"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginBottom="15dp"
                />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/listblank"/>
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneoeb"
                    android:paddingLeft="115dp"
                    android:paddingTop="50dp"
                    android:text="방울 700개"
                    android:textColor="#000000"
                    android:textSize="25dp" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ball"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneoeb"
                    android:paddingLeft="113dp"
                    android:paddingTop="95dp"
                    android:text=">>  트리 7개"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/tree"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="180dp"
                    android:elevation="6dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btncharge"
                            android:layout_width="320dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/listblank"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="32dp"
                            android:text="현금으로 방울 구매가 가능합니다"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="32dp"
                            android:text="트리는 방울 100개의 가치를 나타내는 단위입니다"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="32dp"
                            android:text="방울 100개 이상 소유 시, 멤버십 자격이 부여됩니다"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:layout_marginLeft="32dp"
                            android:text="멤버십 소유자는 최고급 특산품을 한정판으로 제공하는"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_marginLeft="32dp"
                            android:text="프리미엄존 이용이 가능합니다"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:layout_marginLeft="32dp"
                            android:text="프리미엄존 결제는 '방울'과 '트리'로만 가능합니다"
                            android:textSize="12dp"
                            android:fontFamily="@font/applesdgothicneoeb" />
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="280dp"
                            android:layout_marginTop="100dp"
                            android:rotation="55"
                            android:background="@drawable/ball2"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="15dp"
                        android:text="충전하기"
                        android:textSize="20dp"
                        android:textColor="#555555"
                        android:fontFamily="@font/applesdgothicneoeb" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:background="@drawable/btn"/>
                            <ImageView
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/btn"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="65dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:background="@drawable/btn"/>
                            <ImageView
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/btn"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="18dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="계좌간편결제"
                                android:textSize="16dp"
                                android:fontFamily="@font/applesdgothicneoeb" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="105dp"
                                android:text="휴대폰"
                                android:textSize="16dp"
                                android:fontFamily="@font/applesdgothicneoeb" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="85dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/naver"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="82dp"
                            android:layout_marginLeft="195dp"
                            android:background="@drawable/kakao"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="85dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="네이버페이"
                                android:textSize="16dp"
                                android:fontFamily="@font/applesdgothicneoeb" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="95dp"
                                android:text="카카오페이"
                                android:textSize="16dp"
                                android:fontFamily="@font/applesdgothicneoeb" />
                        </LinearLayout>

                    </FrameLayout>


                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnbuy1"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/acbtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="130dp"
                    android:text="결제하기"
                    android:fontFamily="@font/applesdgothicneoeb"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </FrameLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>
